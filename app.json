{
  "expo": {
    "name": "snaplog-ai-vision",
    "slug": "snaplog-ai-vision",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "snaplog",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "predictiveBackGestureEnabled": false,
      "package": "com.avishkagihan.snaplogaivision"
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "SnapLog needs camera access to photograph items for your inventory."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "SnapLog needs access to your photo library so you can select existing photos for cataloging."
        }
      ],
      "./node_modules/@react-native-google-signin/google-signin/app.plugin.js"
    ]
  }
}
